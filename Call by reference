#include<stdio.h>
void main()
{
    int n;
    printf("Enter no.");
    scanf("%d",&n);
    printf("Given number is:%d\n",n);
    inc(&n);
    printf("After incrementing %d\n",n);
}
void inc(int *n)
{
    *n=*n+1;
    printf("Increment is %d\n",*n);
}

********************************************

output

Enter no.3
Given number is:3
Increment is 4
After incrementing 
